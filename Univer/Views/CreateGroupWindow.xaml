<Window x:Class="Univer.Views.CreateGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Univer.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm:CreateGroupWindowModel}"
        Title="{Binding Title}" Height="450" Width="450">
    <DockPanel>
        <TextBox Text="{Binding Name}"
                 DockPanel.Dock="Top" />

        <UniformGrid DockPanel.Dock="Bottom">
            <Button Content="Сохранить" Command="{Binding SaveChangesCommand}" />
            <Button Content="Отмена" IsCancel="True" />
        </UniformGrid>
    </DockPanel>
</Window>
