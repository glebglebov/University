<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Univer.Styles">

    <Style TargetType="ListBox" x:Key="StudentsView_ListBox">
        <Setter Property="Background" Value="#E5ECF4" />
        <Setter Property="BorderThickness" Value="0" />
        
        <Style.Resources>
            <Style TargetType="ListBoxItem">
                <Style.Setters>
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Padding" Value="5" />
                </Style.Setters>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#8A4FFF" />
                    </Trigger>
                    <Trigger Property="IsEnabled" Value="True">
                        <Setter Property="Background" Value="#8A4FFF" />
                    </Trigger>
                    <Trigger Property="IsMouseCaptured" Value="True">
                        <Setter Property="Background" Value="#8A4FFF" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Style.Resources>
    </Style>

    <Style TargetType="GroupBox" x:Key="StudentsView_GroupBox">
        <Setter Property="Padding" Value="5" />
    </Style>

</ResourceDictionary>